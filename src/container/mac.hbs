<main>
    {{>title data="The Mac" big=true}}
    <div class="card" style="width: 54rem;">
        <img src="https://store.storeimages.cdn-apple.com/4668/as-images.apple.com/is/mbp14-spacegray-select-202301?wid=4000&hei=2422&fmt=jpeg&qlt=90&.v=1671304673229"
            class="card-img-top" alt="Apple MacBook Pro">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Category</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{category}}</li>
                </ol>
            </nav>
            <a href="#" class="btn btn-primary">Price {{price}}</a>
        </div>
        <div class="card">
            <div class="card-body">
                {{#with features}}
                <ul>{{#with processor}} <b>Processor:</b>
                    <li>Brand: {{brand}};</li>
                    <li>Model: {{model}};</li>
                    <li>Speed: {{speed}};</li>
                    <li>Cores: {{cores}};</li>
                    <li>Cache: {{cache}};</li>
                    {{/with}}
                </ul>

                <ul>{{#with memory}} <b>Memory:</b>
                    <li>Type: {{type}};</li>
                    <li>Size: {{size}};</li>
                    <li>Speed: {{speed}};</li>
                    {{/with}}
                </ul>
                <ul>{{#with storage}} <b>Storage:</b>
                    <li>Type: {{type}};</li>
                    <li>Size: {{size}};</li>
                    {{/with}}
                </ul>

                <ul>{{#with display}} <b> Display:</b>
                    <li>Size: {{size}};</li>
                    <li>Resolution: {{resolution}};</li>
                    <li>Technology: {{technology}};</li>
                    <li>Color space: {{color_space}};</li>
                    <li>Brightness: {{brightness}};</li>
                    <li>Refresh rate: {{refresh_rate}};</li>
                    {{/with}}
                </ul>
                <ul>{{#with graphics}} <b>Graphics:</b>
                    <li>Brand: {{brand}};</li>
                    <li>Model: {{model}};</li>
                    <li>Memory: {{memory}};</li>
                    {{/with}}
                </ul>
                <b>Ports:</b>
                {{#each ports}}
                <p>Type: {{type}};</p>
                <p>Count: {{count}};</p>
                <ul>
                    {{#each features}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                {{/each}}
                <ul>{{#with battery}} <b>Battery:</b>
                    <li>Type: {{type}};</li>
                    <li>Capacity: {{capacity}};</li>
                    <li>Life: {{life}};</li>
                    {{/with}}
                </ul>
                <p><b>Weight: </b>{{weight}}</p>
                <ul>{{#with dimensions}} <b>Dimensions:</b>
                    <li>Height: {{height}};</li>
                    <li>Width: {{width}};</li>
                    <li>Depth: {{depth}};</li>
                    {{/with}}
                </ul>
                <p><b>Operating system: </b>{{operating_system}}</p>

                <b>Accessories:</b>
                <ul>{{#each accessories}}
                    <li>Name: {{name}};</li>
                    <li>Price: {{price}};</li>
                </ul> {{/each}}

                {{/with}}

            </div>
        </div>
    </div>

</main>