{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title big=true data="My education"}}
            <div>
                <ul>
                    {{#each education}}
                    <li>
                        {{name}}
                        {{#unless isEnd includeZero=true}} (ще в процесі) {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div>
                {{>title big=false data="My certificates"}}
                <div>
                    <ul>
                        {{#each certificates}}
                        <li>
                            {{name}} ({{id}})
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </section>
    </main>
    {{/with}}
</div>

